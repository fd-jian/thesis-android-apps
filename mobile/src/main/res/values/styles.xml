<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">

        <item  name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">@transition/explode</item>
        <item name="android:windowAllowReturnTransitionOverlap">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>


        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <!-- Customize your Color heme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- SettingsFragment -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>


    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    </style>


</resources>
